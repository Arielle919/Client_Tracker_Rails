.row
  .small-12.columns
    %h2.green-font Sign in
.row
  .small-12.medium-6.columns
    .panel
      = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
        .inputs
          = f.input :email, label: 'Email / Username', :autofocus => true
          = f.input :password, label: 'Password'
        .actions
          = f.button :submit, "Sign in", class: 'button tiny radius'
  .row
  .small-3.columns
    = render "devise/shared/links"
